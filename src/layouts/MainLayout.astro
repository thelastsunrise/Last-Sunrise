---
import "bootstrap/dist/css/bootstrap.min.css";
//import "../styles/preview.css";
import "../styles/global.css";

const { title, description, mascotActive } = Astro.props;

import HeadMeta from "../components/HeadMeta.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import NavBar from "../components/NavBar.astro";
---
<html>
    <HeadMeta title={title} description={description}/>
    <body>
        <div class="container">
            <Header/>

            <div class="cloud-topper">
                <div class="cloud-topper-filler"></div>
            </div>

            <main class="mx-4 content">
                <NavBar mascotActive={mascotActive}/>
                <slot/>
            </main>

        </div>
        <Footer/>
    </body>
</html>