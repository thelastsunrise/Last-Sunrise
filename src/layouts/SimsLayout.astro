---
import "bootstrap/dist/css/bootstrap.min.css";
import "../styles/sims.css";

import Footer from "../components/Footer.astro"
import HeadMeta from "../components/HeadMeta.astro";

const { title, description, altTitle } = Astro.props;

const isBlog = Astro.props.altTitle;
const pageTitle = isBlog ? altTitle : title;
---
<HeadMeta title={title} description={description}/>

<a href="../../../../../"><div class="escapebutton">X</div></a>

<div class="container">
    <header class="row">
        <h1 class="text-center mt-5"><a href="/shrines/sims">Last Simsrise</a></h1>
        <nav class="navbar navbar-expand-md justify-content-around">
            <div class="navbar-nav">
                <a class="nav-link" href="/shrines/sims">Home</a>
                <a class="nav-link" href="/shrines/sims/basilio-g1">Legacy</a>
                <a class="nav-link disabled" href="">Cast</a>
                <a class="nav-link disabled" href="">Mods</a>
                <a class="nav-link disabled" href="">Links</a>
            </div>
        </nav>
    </header>

    <main class="row px-5 pb-5 pt-4 mb-5 lightgradient">
        <h2>{pageTitle}</h2>
        <section class="px-4">
            <slot/>
        </section>
    </main>

    <footer class="mb-5">
        <Footer/>
    </footer>
</div>

<script is:inline src="/scripts/ClickImage.js"></script>